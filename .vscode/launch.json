    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev Debug",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main.dart",
            "args": [
                "--dart-define=STAGE=dev",
                "--dart-define=BASE_URL=https://jsonplaceholder.typicode.com",
            ]
        },
        {
            "name": "task_app (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "task_app (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}